<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pedro.projeto1.MainActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="368dp"
        android:layout_height="495dp">

        <ImageView
            android:id="@+id/foto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/copycompany"
            android:scaleType="center"
            />

        <!-- Logo -->
        <TextView
            android:id="@+id/descricao"
            android:text="Copy e Company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/holo_red_dark"
            android:layout_below="@id/foto"
            android:layout_marginTop="5dp"
            android:gravity="center"
            />

        <!-- Telefone -->
        <ImageView
            android:id="@+id/icone_telefone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/telefone"
            android:scaleType="center"
            android:layout_below="@id/descricao"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:text="0800 015 11 69"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/black"
            android:layout_below="@id/descricao"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="25dp" />

        <!-- e-mail -->
        <ImageView
            android:id="@+id/icone_email"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/email"
            android:scaleType="center"
            android:layout_below="@id/icone_telefone"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/txtEmail"
            android:text="copycompany@copycompany.com.br"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/black"
            android:layout_below="@id/icone_telefone"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="25dp" />

        <!-- Endereço -->
        <ImageView
            android:id="@+id/icone_endereco"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/endereco"
            android:scaleType="center"
            android:layout_below="@id/icone_email"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/txtEndereco"
            android:text="Praça Emedi Maximiano Vizotto, 80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/black"
            android:layout_below="@id/icone_email"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/txtEndereco2"
            android:text="Jardim Nova Leme. Leme. SP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/black"
            android:layout_below="@id/icone_email"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="48dp" />

        <!-- Site -->
        <TextView
            android:text="www.copycompany.com.br"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/black"
            android:layout_below="@id/txtEndereco2"
            android:layout_marginTop="40dp"
            android:gravity="center"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
